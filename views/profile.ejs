<%- include('partials/header', { title: 'Mon Profil' }) %>

<main>
  <div class="card">
    <div
      style="
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
      "
    >
      <div
        style="
          width: 100px;
          height: 100px;
          background-color: var(--primary-color);
          border-radius: 50%;
          display: flex;
          align-items: center;
          justify-content: center;
          color: white;
          font-size: 2.5rem;
          font-weight: 700;
          margin-right: 1.5rem;
        "
      >
        <%= userDetails.pseudo.charAt(0).toUpperCase() %>
      </div>
      <div style="text-align: left">
        <h2 style="margin-bottom: 0.5rem"><%= userDetails.pseudo %></h2>
        <p style="color: var(--light-text); margin-bottom: 0.5rem">
          <%= userDetails.email %>
        </p>
        <p style="color: var(--light-text)">
          Membre depuis <%= new Date(userDetails.createdAt ||
          Date.now()).toLocaleDateString() %>
        </p>
      </div>
    </div>

    <div
      style="
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
      "
    >
      <div
        style="
          background-color: #f5f9ff;
          padding: 1.5rem;
          border-radius: var(--radius-md);
          text-align: center;
        "
      >
        <div
          style="
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-color);
          "
        >
          <%= userDetails.bestScore || 0 %>
        </div>
        <div style="color: var(--light-text)">Meilleur score</div>
      </div>

      <div
        style="
          background-color: #f5f9ff;
          padding: 1.5rem;
          border-radius: var(--radius-md);
          text-align: center;
        "
      >
        <div
          style="
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-color);
          "
        >
          <%= userDetails.bestAttempts || '-' %>
        </div>
        <div style="color: var(--light-text)">Meilleure performance</div>
      </div>

      <div
        style="
          background-color: #f5f9ff;
          padding: 1.5rem;
          border-radius: var(--radius-md);
          text-align: center;
        "
      >
        <div
          style="
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-color);
          "
        >
          <%= userDetails.gamesPlayed || 0 %>
        </div>
        <div style="color: var(--light-text)">Parties jouées</div>
      </div>

      <div
        style="
          background-color: #f5f9ff;
          padding: 1.5rem;
          border-radius: var(--radius-md);
          text-align: center;
        "
      >
        <div
          style="
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-color);
          "
        >
          <%= userDetails.gamesWon || 0 %>
        </div>
        <div style="color: var(--light-text)">Parties gagnées</div>
      </div>
    </div>

    <div style="margin-top: 3rem">
      <h3>Historique des parties</h3>
      <p style="color: var(--light-text); margin-top: 1rem">
        Cette fonctionnalité sera bientôt disponible !
      </p>
    </div>

    <div style="margin-top: 3rem">
      <h3>Paramètres du compte</h3>
      <div
        style="display: flex; flex-wrap: wrap; gap: 1.5rem; margin-top: 1.5rem"
      >
        <a href="#" class="btn" style="background-color: var(--primary-color)">
          <i class="fas fa-user-edit" style="margin-right: 0.5rem"></i> Modifier
          mon profil
        </a>
        <a href="#" class="btn" style="background-color: #f56565; color: white">
          <i class="fas fa-key" style="margin-right: 0.5rem"></i> Changer mon
          mot de passe
        </a>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
