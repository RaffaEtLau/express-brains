<%- include('partials/header', { title: 'Contact' }) %>

<main>
  <div class="card">
    <h2>Contactez-nous</h2>
    <p style="margin-bottom: 2rem">
      Vous avez des questions, des suggestions ou vous avez repéré un bug ?
      N'hésitez pas à nous contacter !
    </p>

    <form style="max-width: 500px; margin: 0 auto">
      <div class="form-group">
        <label for="name">Nom</label>
        <input type="text" id="name" required placeholder="Votre nom" />
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          required
          placeholder="Votre adresse email"
        />
      </div>

      <div class="form-group">
        <label for="subject">Sujet</label>
        <select
          id="subject"
          required
          style="
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: var(--radius-md);
            font-size: 1rem;
            color: var(--text-color);
            background-color: #fff;
          "
        >
          <option value="">Sélectionnez un sujet</option>
          <option value="bug">Signaler un bug</option>
          <option value="suggestion">Suggestion d'amélioration</option>
          <option value="question">Question générale</option>
          <option value="other">Autre</option>
        </select>
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        <textarea
          id="message"
          rows="5"
          required
          placeholder="Votre message"
          style="
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: var(--radius-md);
            font-size: 1rem;
            color: var(--text-color);
          "
        ></textarea>
      </div>

      <div style="text-align: center; margin-top: 2rem">
        <button type="submit" class="btn">
          <i class="fas fa-paper-plane" style="margin-right: 0.5rem"></i>
          Envoyer
        </button>
      </div>
    </form>

    <div style="margin-top: 3rem; text-align: center">
      <p style="margin-bottom: 1rem">
        <strong>Ou contactez-nous directement :</strong>
      </p>
      <p>
        <i
          class="fas fa-envelope"
          style="margin-right: 0.5rem; color: var(--primary-color)"
        ></i>
        <a
          href="mailto:contact@expressbrains.com"
          style="color: var(--primary-color)"
          >contact@expressbrains.com</a
        >
      </p>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
